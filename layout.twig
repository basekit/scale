<!doctype html>
<html class="no-js  full-nav" lang="{{ page.seoLang }}">

    <head>
        <meta charset="utf-8" />
        <title>{{ page.title }}</title>
        <meta name="keywords" content="{{ page.keywords }}" />
        <meta name="description" content="{{ page.description }}" />
        <meta name="viewport" content="width=device-width,initial-scale=1">

        {% if site.favicon %}
            <link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
            <link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
        {% endif %}

        {% include basekit.headScript %}
        <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"></script>
    </head>

    <body class="{{ page.backgroundClass }}">


        {% block content %}
        {% endblock %}


        {% include basekit.bodyScript %}


        <!-- jQuery -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


        <!-- Scripts -->
        <script src="{{ asset('scripts/custom.js')}}"></script>


        <script>
            (function () {
                var decoEls = document.querySelectorAll('.responsiveslideshow__image-title');
                decoFill(decoEls);
            }(window));
        </script>


        <!-- Page Specific Scripts -->
        {% block scripts %}
        {% endblock %}


    </body>
</html>
